generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Code-First -> DB Schema Ã¶nce kodla, sonra db'yi migrate et.

// column_name column_type @[ additional props. (pk, default, unique) ]
model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  createdAt DateTime @default(now())
  roles UserRoles[]
}


model Role {
  id Int @id @default(autoincrement())
  name String @unique
  users UserRoles[]
}

model UserRoles {
  userId Int
  roleId Int
  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  @@id([userId,roleId])
  @@unique([userId, roleId])
}